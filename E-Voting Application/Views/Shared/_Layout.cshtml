<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IEC Voting Platform</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_Voting_Application.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet"/>
    <link rel="icon" type="image/x-icon" href="~/Images/IEC_logo.png">
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar">
 
        <div class="logo">
            <img src="/Images/IEC_logo.png" alt="App Logo">
            <span class="logo_txt">Independent Electoral Commission of South Africa</span>
        </div>

        <!-- Navigation Links Centered in the Navbar -->
        <div class="nav-links">
            <a  asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="UserAuth" asp-action="Login">Login</a>
            <a asp-controller="UserAuth" asp-action="Register">Register</a>
            <a asp-controller="Home" asp-action="About">About</a>
            <a asp-controller="Home" asp-action="Profile">Profile</a>

        </div>
    </nav>
    <div class="container" style="margin-top: 50px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>